{
  "name": "@ftops/api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "wrangler dev",
    "gen:migrations": "node scripts/generate-migrations-manifest.js",
    "prebuild": "npm run gen:migrations",
    "build": "wrangler build",
    "test": "vitest run -c vitest.unit.config.ts",
    "pretest": "npm run gen:migrations",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "pretest:unit": "npm run gen:migrations",
    "test:int": "vitest run -c vitest.integration.config.ts",
    "pretest:int": "npm run gen:migrations",
    "test:init": "vitest run -c vitest.integration.config.ts",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier \"**/*.{ts,js,json,md}\" --write",
    "format:check": "prettier \"**/*.{ts,js,json,md}\" --check",
    "fmt:check": "npm run format:check",
    "typecheck": "tsc --noEmit",
    "tidy": "npm run format:check && npm run lint && npm run typecheck && npm run test:unit",
    "verify": "npm run tidy && npm run test:int",
    "cf:login": "wrangler login",
    "deploy:unsafe": "npm run build && wrangler deploy",
    "deploy": "npm run verify && wrangler deploy",
    "deploy:prod": "npm run verify && wrangler deploy --env production",
    "deploy:dev": "npm run verify && wrangler deploy --env dev",
    "db:execute": "wrangler d1 execute ftops-db --command",
    "db:execute:remote": "wrangler d1 execute --remote ftops-db --command",
    "db:migrations:create": "wrangler d1 migrations create ftops-db",
    "db:migrations:list:local": "wrangler d1 migrations list ftops-db --local",
    "db:migrations:list:remote": "wrangler d1 migrations list ftops-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply ftops-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply ftops-db --remote"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noahpeters/ftops.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@ftops/webhooks": "file:../../packages/webhooks",
    "luxon": "^3.7.2"
  },
  "bugs": {
    "url": "https://github.com/noahpeters/ftops/issues"
  },
  "homepage": "https://github.com/noahpeters/ftops#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260116.0",
    "@types/luxon": "^3.7.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "miniflare": "^4.0.0",
    "prettier": "^3.8.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.2"
  }
}
